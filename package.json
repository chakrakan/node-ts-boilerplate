{
  "name": "node-ts-boilerplate",
  "description": "NodeJS & TypeScript boilerplate to get quickly started",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/chakrakan/node-ts-boilerplate.git",
  "author": "Kanisk Chakraborty <57884127+chakrakan@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc",
    "dev": "yarn build --watch --preserveWatchOutput",
    "start": "tsc && node --require 'dotenv/config' dist/src/index.js",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "eslint src --ext js,ts",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-typescript": "7.15.0",
    "@types/jest": "27.0.1",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "eslint": "7.32.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "rimraf": "3.0.2",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
